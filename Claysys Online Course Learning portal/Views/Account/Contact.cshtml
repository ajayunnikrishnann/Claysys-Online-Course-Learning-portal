@{
    ViewBag.Title = "Contact Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <link rel="stylesheet" href="~/Content/Contact.css"> <!-- Link to your external CSS file -->
</head>
<body>

    <!-- Main content container -->
    <div class="container">
        <!-- Contact form section -->
        <div class="contact-section">
            <h1>Contact Us</h1>
            <!-- Contact form -->
            <form id="contactForm" action="#" method="post">
                <label for="username">Name</label>
                <input type="text" id="username" name="username">
                <span id="usernameError" class="error"></span>

                <label for="email">Email</label>
                <input type="email" id="email" name="email">
                <span id="emailError" class="error"></span>

                <label for="phone">Phone Number</label>
                <input type="tel" id="phone" name="phone">
                <span id="phoneError" class="error"></span>

                <label for="message">Message</label>
                <textarea id="message" name="message" rows="6"></textarea>
                <span id="messageError" class="error"></span>

                <button type="submit">Submit</button>
            </form>
        </div>
        <!-- Address section -->
        <div class="address-section">
            <h1>Claysys</h1>
            <img src="~/Content/images/office1.jpg" alt="Office Image">

            <p><strong>Address:</strong></p>
            <p>Infopark Kochi Phase 2</p>
            <p>Infopark Phase 2, Kakkanad, Kerala 682030</p>
            <p><strong>Phone:</strong> 0484 297 5311</p>
            <p><strong>Email:</strong> info@claysys.com</p>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/ContactValidation.js"></script>
</body>
</html>
