@{
    ViewBag.Title = "About";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/About.css">
</head>
<body>
    <!-- Main content container -->
    <div class="container">
        <!-- About section -->
        <div class="about-section">
            <h1>Claysys Online Course Learning Platform</h1>
            <p>Welcome to Claysys Online Course Learning Platform, your number one source for learning new skills, advancing your career, and achieving your personal and professional goals. We're dedicated to providing you the very best of online education with a focus on quality content, interactive learning, and student satisfaction.</p>
            <p>Our mission is to democratize education by making high-quality learning accessible and affordable to everyone, everywhere. We believe in the power of education to transform lives and communities, and we strive to offer courses that are both practical and inspiring.</p>

            <p>
                <strong>Email:</strong> support@claysys.com<br>
                <strong>Phone:</strong> +1 (800) 123-4567
            </p>
            <div class="gallery-section">
                <h2>Gallery</h2>
                <div class="slider-container">
                    <span class="prev" onclick="changeSlide(-1)">&#10094;</span>
                    <span class="next" onclick="changeSlide(1)">&#10095;</span>
                    <div class="slider">
                        <img src="~/Content/Images/course1.jpg" alt="Course Image 1">
                        <img src="~/Content/Images/course2.jpg" alt="Course Image 2">
                        <img src="~/Content/Images/course3.jpg" alt="Course Image 3">
                        <img src="~/Content/Images/course4.jpg" alt="Course Image 4">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            let currentSlideIndex = 0;
            const slides = document.querySelectorAll('.slider img');
            const slidesToShow = 2; // Number of slides to show at a time
            const totalSlides = slides.length;
            const maxSlideIndex = totalSlides - slidesToShow;

            function changeSlide(direction) {
                currentSlideIndex += direction;

                if (currentSlideIndex < 0) {
                    currentSlideIndex = maxSlideIndex;
                }

                if (currentSlideIndex > maxSlideIndex) {
                    currentSlideIndex = 0;
                }

                const offset = -(100 / slidesToShow) * currentSlideIndex;
                document.querySelector('.slider').style.transform = `translateX(${offset}%)`;
            }

            // Initialize the first set of slides as active
            changeSlide(0);

            document.querySelector('.prev').addEventListener('click', function () {
                changeSlide(-1);
            });

            document.querySelector('.next').addEventListener('click', function () {
                changeSlide(1);
            });
        });
    </script>
</body>
</html>
