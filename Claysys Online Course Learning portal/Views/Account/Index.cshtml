@model IEnumerable<Claysys_Online_Course_Learning_portal.Models.Course>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link href="~/Content/Custom.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
}

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
            // Slideshow logic
            var slideIndex = 0;
            function showSlides() {
                var i;
                var slides = document.getElementsByClassName("mySlides");
                for (i = 0; i < slides.length; i++) {
                    slides[i].style.display = "none";
                }
                slideIndex++;
                if (slideIndex > slides.length) { slideIndex = 1 }
                slides[slideIndex - 1].style.display = "block";
                setTimeout(showSlides, 2000); // Change image every 2 seconds
            }
            showSlides();

            // Enrollment button logic
            $('.enrollButton').click(function () {
                var courseId = $(this).data('course-id');
                var buttonText = $(this).text();
                var isUserLoggedIn = @(Session["UserID"] != null ? "true" : "false");

                if (!isUserLoggedIn) {
                    toastr.warning('You need to log in to request enrollment in a course.');
                    return;
                }

                if (buttonText === "View Course") {
                    window.location.href = '@Url.Action("ViewDetail", "Account")' + '?id=' + courseId;
                    return;
                }

                if (buttonText === "Enrollment Requested") {
                    toastr.info('You have already requested enrollment for this course.');
                    return;
                }

                $('#confirmEnrollButton').data('course-id', courseId); // Store courseId in the modal button
                $('#enrollModal').modal('show'); // Show the modal
            });

            $('#confirmEnrollButton').click(function () {
                var courseId = $(this).data('course-id');
                $.ajax({
                    url: '@Url.Action("RequestEnrollment", "Account")',
                    type: 'POST',
                    data: { courseId: courseId },
                    success: function (response) {
                        if (response.success) {
                            toastr.success('Your enrollment request has been submitted.');
                            $('#enrollModal').modal('hide');
                            $('[data-course-id="' + courseId + '"]').text('Enrollment Requested');
                        } else {
                            toastr.error(response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        toastr.error('An error occurred during the request.');
                    }
                });
            });

            function updateButtonStatus(courseId, status) {
                var button = $('[data-course-id="' + courseId + '"]');
                if (status === "Approved") {
                    button.text('View Course');
                } else if (status === "Rejected") {
                    button.text('Enroll');
                } else if (status === "Enrollment Requested") {
                    button.text('Enrollment Requested');
                } else {
                    button.text('Enroll');
                }
            }

            $('.enrollButton').each(function () {
                var courseId = $(this).data('course-id');
                $.ajax({
                    url: '@Url.Action("GetEnrollmentStatus", "Account")',
                    type: 'POST',
                    data: { courseId: courseId },
                    success: function (response) {
                        if (response.success) {
                            updateButtonStatus(courseId, response.status);
                        }
                    }
                });
            });
        });
    </script>
}

<div class="slideshow-container">
    <div class="mySlides fade">
        <img src="@Url.Content("~/Content/images/slider1.jpeg")" style="width:100%">
    </div>
    <div class="mySlides fade">
        <img src="@Url.Content("~/Content/images/slider2.jpeg")" style="width:100%">
    </div>
    <div class="mySlides fade">
        <img src="@Url.Content("~/Content/images/slider3.jpeg")" style="width:100%">
    </div>
    <div class="mySlides fade">
        <img src="@Url.Content("~/Content/images/slider4.jpeg")" style="width:100%">
    </div>
</div>

<div class="container mt-4">
    <h3>Courses</h3>
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="course-card">
                    <img src="@($"data:image/jpeg;base64,{course.ImageBase64}")" class="course-image" alt="@course.Title">
                    <h5 class="course-title">@course.Title</h5>
                    <div class="course-reviews">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <span class="fa fa-star @(i <= course.AverageReviewScore ? "checked" : "")"></span>
                        }
                        <span class="review-count">(@course.Reviews.Count) Reviews</span>
                    </div>
                    <a href="javascript:void(0);" class="btn custom-btn enrollButton" data-course-id="@course.CourseId">
                        @if (ViewBag.EnrolledCourses != null && ViewBag.EnrolledCourses.Contains(course.CourseId))
                        {
                            @:Enrollment Requested
                        }
                        else if (ViewBag.ApprovedCourses != null && ViewBag.ApprovedCourses.Contains(course.CourseId))
                        {
                            @:View Course
                        }
                        else
                        {
                            @:Enroll
                        }
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Enrollment Confirmation Modal -->
<div class="modal fade" id="enrollModal" tabindex="-1" aria-labelledby="enrollModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="enrollModalLabel">Confirm Enrollment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to enroll in this course?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmEnrollButton">Enroll</button>
            </div>
        </div>
    </div>
</div>
